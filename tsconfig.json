{
  "compilerOptions" : {
    "target" : "ES2020",
    "module" : "CommonJS",
    "outDir" : "./dist",
    "rootDir" : "./src",
    "strict" : true,
    "esModuleInterop" : true,
    "allowSyntheticDefaultImports" : true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": ["node_modules"]
}